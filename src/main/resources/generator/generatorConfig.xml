<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 数据库驱动:换成你本地的驱动包位置-->
    <classPathEntry  location="D:\wh\JST_maven_repository\mysql\mysql-connector-java\8.0.21\mysql-connector-java-8.0.21.jar "/>
    <context id="DB2Tables"  targetRuntime="MyBatis3">
        <!-- 取消生成的注释 -->
        <!-- <commentGenerator>
            <property name="suppressDate" value="false"/>
            <property name="suppressAllComments" value="false"/>
        </commentGenerator> -->
        <!-- 通过type指定自定义的注释 -->
        <commentGenerator type="com.example.demo.generator.MyCommentGenerator">
            <!-- 不要开启，否则将不会使用自定义注释 -->
            <!-- <property name="suppressAllComments" value="true"> -->
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://127.0.0.1:3306/database?characterEncoding=utf-8" userId="username" password="pwd"></jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成模型的包名和位置-->
        <javaModelGenerator targetPackage="com.example.demo.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="resources.mapper" targetProject="src/main">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.demo.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <!-- 要生成的表 tableName是数据库中的表名或视图名 domainObjectName是实体类名-->
        <table tableName="stat_xf_person" domainObjectName="StatXfPerson" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
            <property name="rootClass" value="com.example.demo.base.BaseBean"/>
<!--            防止text类型字段的存在导致生成 -WithBLOBs实体-->
<!--            <columnOverride column="dept_ids" property="deptIds" javaType="java.lang.String" jdbcType="VARCHAR"/>-->
<!--            <columnOverride column="dept_names" property="deptNames" javaType="java.lang.String" jdbcType="VARCHAR"/>-->
        </table>
    </context>
</generatorConfiguration>